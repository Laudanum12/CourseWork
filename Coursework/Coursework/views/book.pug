extends layout.pug
block links
	link(rel='stylesheet', href='/stylesheets/main.css')
	link(rel='stylesheet', href='/stylesheets/book.css')
block scripts
	script(src='/image.js')
	script(src='/ajax.js')

block content
	body
	div(class='content-grid-container')
		div(class='content-sidebar-image')
			div(class='image')
				img(id='book_image')
		div(class='content-grid')
			h2 #{book[0]['name_book']}
			div(class='content-grid-cell')
				div(class='content-grid-cell-shell')
					div(class='content-grid-cell-top') Название
					div(class='content-grid-cell-bottom') #{book[0]['name_book']}
			div(class='content-grid-cell')
				div(class='content-grid-cell-shell')
					div(class='content-grid-cell-top') Цена
					div(class='content-grid-cell-bottom') #{book[0]['price']}
			div(class='content-grid-cell')
				div(class='content-grid-cell-shell')
					div(class='content-grid-cell-top') Год издания
					div(class='content-grid-cell-bottom') #{book[0]['year_book']}
			div(class='content-grid-cell')
				div(class='content-grid-cell-shell')
					div(class='content-grid-cell-top') Количество страниц
					div(class='content-grid-cell-bottom')  #{book[0]['quantity']}
			div(class='content-grid-cell')
				div(class='content-grid-cell-shell')
					div(class='content-grid-cell-top') Описание
					div(class='content-grid-cell-bottom description') #{book[0]['description_book']}
		div(class='button-container')
			button(class='button-link' onclick='add_book_to_cart_click(' + book[0]['id'] + ')') Добавить в корзину