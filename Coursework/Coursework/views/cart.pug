doctype html
html
	head
		title=title
		link(rel='stylesheet', href='/stylesheets/main.css')
		link(rel='stylesheet', href='/stylesheets/cart.css')
		
		<meta charset='UTF-8'>
	body
		block content

block content
	body
	div(class='page')
		div(class='menu-container')
			div(class='menu ')
				div(class='date') 
					a(href='/') Aug 14, 2019
				div(class='cart')
						a(href='/cart') Cart
				div(class='signup') 
					a(href='/registration') SignUp
				div(class='login') 
					a(href='/authorization') LogIn
				div(class='orders')
					a(href='/orders') Orders
		div(class='header-container')
			div(class='header')
				div(class='subscribe') Subscribe &#9662;
				div(class='logo')
					p Книжный магазин, который удивит
				div(class='social')
		form(class='search-form' action='/' method='post')
			input(id='request' name='request' type='text')
			button Submit
		div(class='content-grid-container')
			div(class='content-grid-basket')
				each book in books
					div(class='content-grid-basket-cell')
						div(class='basket-image')
						div(class='basket-book')
							div(class='basket-cell-top')
								a(href='/book/'+ book.id class='my_href') #{book.book_name}
							div(class='basket-cell-bottom') #{book.price}
						div(class='basket-quantity')
							div(class='basket-cell-top') Количество
							div(class='basket-cell-bottom') #{book.quantity}
								form(action='/add_to_сart?book_id='+ book.id method=post)
									input(type='number' name="increment" onblur="submit();" min='1')
						div(class='basket-cost')
							div(class='basket-cell-top') Итог
							div(class='basket-cell-bottom') #{book.result}
						div(class='basket-delete') Удалить
							
			div(class='price-container')
				div(class='price-cell') Сумма
					p #{result}
					a(href='/order') Order
				//-div(class='price-cell')
