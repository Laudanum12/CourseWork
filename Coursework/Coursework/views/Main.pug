extends layout

block content
	body
	div(class='page')
		div(class='menu-container')
			div(class='menu')
				div(class='date') 
					a(href='/') Aug 14, 2019
				div(class='cart')
					a(href='/cart') Cart
				div(class='orders')
					a(href='/orders') Orders
				if id == 1
					div(class='signup')
						a(href='/registration') SignUp
					div(class='login') 
						a(href='/authorization') LogIn
				else
					alert( "Привет" )
					div(class='user-links')
						div(class='signup') Welcome #{id}
						form(action='/' method='post' class='logout')
							input(type='hidden' name='button-submit' id='button-submit')
							button(class='button-link') Logout
				
		div(class='header-container')
			div(class='header')
				div(class='subscribe') Subscribe &#9662;
				
				div(class='logo')
					p Книжный магазин, который удивит
				div(class='social')
		form(class='search-form' action='/' method='post')
			input(id='request' name='request' type='text')
			button Submit
		div(class='content-grid-container')
			div(class='sidebar') 
				each genre in genres
					li 
						a(href ='/') #{genre.name} 
			div(class='content-grid')
				-for(var x = 0; x < books.length; x++)
					div(class='book-grid')
						div(class='book-grid-image')
							img(src='')
						
						a(href='/book/'+ books[x]['id'] ) #{books[x]['book_name']}
						p #{books[x]['price']}
						form(action='/add_to_сart?book_id=' + books[x]['id'] + '&?increment=1' method='post')
							button(class='button-link') Добавить в корзину
						

						
						
						

		