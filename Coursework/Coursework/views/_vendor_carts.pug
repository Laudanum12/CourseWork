doctype html
html
	head
		title=title
		link(rel='stylesheet', href='/stylesheets/main.css')
		link(rel='stylesheet', href='/stylesheets/cart.css')
		<meta charset='UTF-8'>
	
		block content
			body
			div(class='page')
				div(class='menu-container')
					div(class='menu')
						div(class='date') 
							a(href='/') Aug 14, 2019
						div(class='cart')
							a(href='/cart') Cart
						div(class='orders')
							a(href='/orders') Orders
						if id == 1
							div(class='signup')
								a(href='/registration') SignUp
							div(class='login') 
								a(href='/authorization') LogIn
						else
							div(class='user-links')
								div(class='signup') Welcome #{id}
								form(action='/' method='post' class='logout')
									input(type='hidden' name='button-submit' id='button-submit')
									button(class='button-link') Logout
						if type == 1
							div(class='features') Features
				div(class='header-container')
					div(class='header')
						div(class='subscribe') Subscribe &#9662;
						div(class='logo')
							p Книжный магазин, который удивит
						div(class='social')
				form(class='search-form' action='/' method='post')
					input(id='request' name='request' type='text')
					button Submit
				if type == 1
					div(class='content-grid-container')
						div(class='content-grid-basket')
							each user in users
								div(class='content-grid-cell')
									div(class='cell')
										div(class='cell-top') Номер корзины
										div(class='cell-bottom') #{user.cart_id}
									div(class='cell')
										div(class='cell-top') Количество в сумме книг
										div(class='cell-bottom') #{user.book_sum_quantity}
									div(class='cell')
										div(class='cell-top') Количество разных книг 
										div(class='cell-bottom') #{user.book_count_qauntity}
									div(class='cell')
										div(class='cell-top') Стоимость
										div(class='cell-bottom') #{user.result}
									each detail in details
										if detail.cart_id == user.cart_id
										div(class='cell' id='details' + user.cart_id style='display: none')
											p Дата заказа #{detail.date_of_order}
											p Полное имя #{detail.full_name}
											p Телефон #{detail.phone}
											p Адрес #{detail.adress}
											p Почта #{detail.email}
											p Цена заказа #{detail.price_of_delivery}
											p Итог #{detail.result}
									
									input(type='button' class='button-header' onclick='appear_dissapear_details('+ user.cart_id + ')') Показать/скрыть подробности
									
											
										
				else
					div(class='form-row') Недоступно




